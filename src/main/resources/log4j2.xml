<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" monitorInterval="5">

    <Appenders>


        <File name="creatorAppender" fileName="logs/creator.log" append="false">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5p %logger - %msg%n</Pattern>
            </PatternLayout>
        </File>

        <File name="sorterAppender" fileName="logs/sorter.log" append="false">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5p %logger - %msg%n</Pattern>
            </PatternLayout>
        </File>

        <File name="allLogsFile" fileName="logs/all.log" append="false">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5p %logger - %msg%n</Pattern>
            </PatternLayout>
        </File>

        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5p #%x(%X{UNIQUE-IDENTIFIER}) %logger - %msg%n"/>
        </Console>

        <File name="aFileAppender" fileName="logs/test.log">
            <PatternLayout>
                <Pattern>"%d{HH:mm:ss.SSS} [%t] %-5p #%x(%X{UNIQUE-IDENTIFIER}) %logger - %msg%n"</Pattern>
            </PatternLayout>
        </File>

        <RollingFile name="RollingFileAppender"
                     fileName="logs/app-roller.log"
                     filePattern="logs/app-%d{MM-dd-yyyy}-%i.log">
            <PatternLayout>
                <Pattern>"%d{HH:mm:ss.SSS} [%t] %-5p #%x(%X{UNIQUE-IDENTIFIER}) %logger - %msg%n"</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="30 KB" />
            </Policies>
            <DefaultRolloverStrategy max="3" />
        </RollingFile>
        
        <Async name="Async">
            <AppenderRef ref="Console"/>
        </Async>
    </Appenders>

    <Loggers>

        <logger name="puzzle.PuzzleServerMain" level="INFO" additivity="false">
        <!--<logger name="puzzle.PuzzleServerMain" level="FATAL">-->
            <AppenderRef ref="Console"/>
            <AppenderRef ref="aFileAppender"/>
            <AppenderRef ref="RollingFileAppender"/>
            <!--<AppenderRef ref="Async"/>-->
        </logger>


        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>

    </Loggers>
    
</Configuration>